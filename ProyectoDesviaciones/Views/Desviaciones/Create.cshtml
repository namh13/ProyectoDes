    <script>
        $(function () {
            $("#FechaDesviacion").datepicker({
                defaultDate: new Date(),
                dateFormat: 'dd/MM/yy'
            });
        });
        $(function () {
            $("#DescripcionFechaDesviacion").datepicker({
                defaultDate: new Date(),
                dateFormat: 'dd/MM/yy'
            });
        });
        $(function () {
            $("#FechaVencimiento").datepicker({
                defaultDate: new Date(),
                dateFormat: 'dd/MM/yy'
            });
        });
    </script>
}
